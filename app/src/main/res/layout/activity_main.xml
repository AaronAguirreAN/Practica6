<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/esquerra"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorGray"
        android:text="AaronAguirre,AaronAguirre,AaronAguirre,AaronAguirre,AaronAguirre,AaronAguirre,AaronAguirre,AaronAguirre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"/>
    <TextView
        android:id="@+id/dreta"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorSilver"
        android:text="AaronAguirre,AaronAguirre,AaronAguirre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"/>
    <androidx.constraintlayout.widget.Barrier
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/muro"
        app:constraint_referenced_ids="esquerra,dreta"
        app:barrierDirection="bottom"/>
    <Button
        android:id="@+id/boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorSilver"
        android:text="Button"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/muro" />

</androidx.constraintlayout.widget.ConstraintLayout>