<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/blue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorNavy"
        android:text="30%-50% Aarón Aguirre"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.3"/>
    <TextView
        android:id="@+id/taronja"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorOrange"
        android:gravity="center"
        android:text="20%-50% Aarón Aguirre"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />
    <TextView
        android:id="@+id/olive"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorOlive"
        android:text="25%-50% Aarón Aguirre"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blue"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.25"/>
    <TextView
        android:id="@+id/red"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorRed"
        android:gravity="center"
        android:text="20%-50% Aarón Aguirre"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/taronja"
        app:layout_constraintWidth_percent="0.5" />
    <TextView
        android:id="@+id/green"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorGreen"
        android:text="45%-50% Aarón Aguirre"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/olive"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.45"/>
    <TextView
        android:id="@+id/purple"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPurple"
        android:gravity="center"
        android:text="70%-50% Aarón Aguirre"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintHeight_percent="0.70"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/red"
        app:layout_constraintWidth_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>